<?xml version="1.0" encoding="utf-8"?><ScrollView	xmlns:android="http://schemas.android.com/apk/res/android"	xmlns:app="http://schemas.android.com/apk/res-auto"	xmlns:tools="http://schemas.android.com/tools"	android:layout_width="match_parent"	android:scrollbars="none"	android:layout_height="match_parent"	android:background="@color/colorPrimary">		<androidx.constraintlayout.widget.ConstraintLayout		android:layout_width="match_parent"		android:layout_height="match_parent"		android:padding="@dimen/_10sdp">				<ImageView			android:id="@+id/premium_close_btn"			android:layout_width="@dimen/_30sdp"			android:layout_height="@dimen/_30sdp"			android:padding="@dimen/_3sdp"			android:src="@drawable/cross_icon"			android:clickable="true"			app:layout_constraintEnd_toEndOf="parent"			app:layout_constraintTop_toTopOf="parent"			app:tint="@color/colorgreen" />				<androidx.viewpager.widget.ViewPager			android:id="@+id/viewPager"			android:layout_width="match_parent"			android:layout_height="@dimen/_150sdp"			android:layout_marginTop="@dimen/_5sdp"			app:layout_constraintEnd_toEndOf="parent"			app:layout_constraintHorizontal_bias="0.4"			app:layout_constraintStart_toStartOf="parent"			app:layout_constraintTop_toBottomOf="@+id/premium_close_btn"/>				<com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator			android:id="@+id/spring_dots_indicator"			android:layout_width="wrap_content"			android:layout_height="wrap_content"			android:layout_marginTop="@dimen/_15sdp"			app:dampingRatio="0.5"			app:dotsColor="@color/gray_mid"			app:dotsCornerRadius="10dp"			app:dotsSize="@dimen/_8sdp"			app:dotsSpacing="@dimen/_2sdp"			app:dotsStrokeColor="@color/gray_mid"			app:dotsStrokeWidth="@dimen/_1sdp"			app:layout_constraintEnd_toEndOf="parent"			app:layout_constraintStart_toStartOf="parent"			app:layout_constraintTop_toBottomOf="@id/viewPager"			app:stiffness="300" />			<LinearLayout				android:id="@+id/verticallayout"				android:layout_width="match_parent"				android:layout_height="130dp"				android:layout_below="@+id/viewPager"				android:layout_marginTop="20dp"				android:background="@drawable/linear_border_boxes"				android:divider="@drawable/divider"				android:dividerPadding="10dp"				android:gravity="center"				android:orientation="horizontal"				android:showDividers="middle"				app:layout_constraintEnd_toEndOf="parent"				app:layout_constraintStart_toStartOf="parent"				app:layout_constraintTop_toBottomOf="@id/spring_dots_indicator">				<LinearLayout					android:id="@+id/premium_low"					android:layout_width="match_parent"					android:layout_height="match_parent"					android:layout_gravity="center"					android:layout_weight="1"					android:gravity="center"					android:orientation="vertical">					<TextView                        android:layout_width="wrap_content"						android:layout_height="wrap_content"						android:layout_below="@+id/image"						android:text="1"						android:fontFamily="@font/avalon"						android:textStyle="bold"						android:textColor="@color/white"						android:textSize="25sp" />					<TextView                        android:fontFamily="@font/avalon"						android:textStyle="bold"						android:layout_width="wrap_content"						android:layout_height="wrap_content"						android:layout_below="@+id/image"						android:text="week"						android:textColor="@color/white"						android:textSize="11sp" />					<TextView						android:id="@+id/third"						android:layout_width="wrap_content"						android:layout_height="wrap_content"						android:layout_below="@+id/image"						android:text="$2.99"						android:fontFamily="@font/avalon"						android:textStyle="bold"						android:textColor="@color/white"						android:textSize="14sp" />					<TextView						android:id="@+id/fourth"						android:layout_width="wrap_content"						android:layout_height="wrap_content"						android:layout_below="@+id/image"						android:layout_marginTop="@dimen/_10sdp"						android:text="$2.99/wk"						android:fontFamily="@font/avalon"						android:textColor="@color/white"						android:textSize="12sp"						android:textStyle="bold" />				</LinearLayout>				<LinearLayout					android:id="@+id/premium_mid"					android:layout_width="match_parent"					android:layout_height="match_parent"					android:layout_gravity="center"					android:layout_weight="1"					android:gravity="center"					android:orientation="vertical">					<TextView                        android:layout_width="wrap_content"						android:layout_height="wrap_content"						android:text="1"						android:fontFamily="@font/avalon"						android:textStyle="bold"						android:textColor="@color/white"						android:textSize="25sp" />					<TextView                        android:layout_width="wrap_content"						android:layout_height="wrap_content"						android:text="month"						android:fontFamily="@font/avalon"						android:textStyle="bold"						android:textColor="@color/white"						android:textSize="11sp" />					<TextView						android:id="@+id/thirdmonth"						android:layout_width="wrap_content"						android:layout_height="wrap_content"						android:text="$4.99"						android:fontFamily="@font/avalon"						android:textStyle="bold"						android:textColor="@color/white"						android:textSize="14sp" />					<TextView						android:id="@+id/fourthmonth"						android:layout_width="wrap_content"						android:layout_height="wrap_content"						android:layout_marginTop="@dimen/_10sdp"						android:text="$4.99/mo"						android:textColor="@color/white"						android:textSize="12sp"						android:fontFamily="@font/avalon"						android:textStyle="bold" />				</LinearLayout>				<LinearLayout					android:id="@+id/premium_high"					android:layout_width="match_parent"					android:layout_height="match_parent"					android:layout_gravity="center"					android:background="@drawable/shape_premium_right"					android:layout_weight="1"					android:gravity="center"					android:fontFamily="@font/avalon"					android:textStyle="bold"					android:orientation="vertical">					<TextView                        android:layout_width="wrap_content"						android:layout_height="wrap_content"						android:text="12"						android:fontFamily="@font/avalon"						android:textStyle="bold"						android:textColor="@color/white"						android:textSize="25sp" />					<TextView                        android:layout_width="wrap_content"						android:layout_height="wrap_content"						android:layout_below="@+id/image"						android:text="month"						android:fontFamily="@font/avalon"						android:textStyle="bold"						android:textColor="@color/white"						android:textSize="@dimen/_8sdp" />					<TextView						android:id="@+id/twelveemonth"						android:layout_width="wrap_content"						android:layout_height="wrap_content"						android:text="$47.88"						android:fontFamily="@font/avalon"						android:textStyle="bold"						android:textColor="@color/white"						android:textSize="14sp" />					<TextView                        android:layout_width="match_parent"						android:layout_height="wrap_content"						android:gravity="center_horizontal"						android:text="SAVE 58%"						android:fontFamily="@font/avalon"						android:textStyle="bold"						android:textAlignment="center"						android:textColor="#fff"						android:textSize="@dimen/_8sdp" />					<TextView						android:id="@+id/twelveeemonth"						android:layout_width="match_parent"						android:layout_height="wrap_content"						android:gravity="center_horizontal"						android:text="$3.99/yr"						android:layout_marginTop="@dimen/_5sdp"						android:fontFamily="@font/avalon"						android:textStyle="bold"						android:textColor="#fff"						android:textSize="12sp"						/>				</LinearLayout>		</LinearLayout>		<TextView			android:id="@+id/no_commit"			android:layout_width="wrap_content"			android:layout_height="wrap_content"			android:text="No Commitment , Cancel Anytime"			android:textColor="@color/text_color"			android:textSize="@dimen/_9sdp"			android:layout_marginTop="@dimen/_15sdp"			android:textStyle="bold"			android:fontFamily="@font/avalon"			app:layout_constraintEnd_toEndOf="parent"			app:layout_constraintStart_toStartOf="parent"			app:layout_constraintTop_toBottomOf="@id/verticallayout" />		<Button			android:id="@+id/premium"			android:layout_width="match_parent"			android:layout_height="@dimen/_40sdp"			android:layout_marginTop="20dp"			android:background="@drawable/shape_rounded_sky_blue_button"			android:text="Get Premium"			android:textStyle="bold"			android:fontFamily="@font/avalon"			android:textAllCaps="false"			android:textColor="#fff"			app:layout_constraintEnd_toEndOf="parent"			app:layout_constraintStart_toStartOf="parent"			app:layout_constraintTop_toBottomOf="@id/no_commit" />		<Button			android:id="@+id/freetrial"			android:layout_width="match_parent"			android:layout_height="@dimen/_40sdp"			android:layout_marginTop="20dp"			android:visibility="gone"			android:background="@drawable/shape_rounded_sky_blue_button2"			android:text="Start 3 Days Free Trial"			android:fontFamily="@font/avalon"			android:textAllCaps="false"			android:textColor="@color/text_color"			android:textStyle="bold"			app:layout_constraintEnd_toEndOf="parent"			app:layout_constraintStart_toStartOf="parent"			app:layout_constraintTop_toBottomOf="@id/premium" />		<TextView			android:id="@+id/restore"			android:layout_width="wrap_content"			android:layout_height="wrap_content"			android:layout_marginTop="10dp"			android:text="Restore Purchase"			android:textColor="@color/text_color"			android:textSize="@dimen/_9sdp"			android:textStyle="bold"			android:fontFamily="@font/avalon"			app:layout_constraintEnd_toEndOf="parent"			app:layout_constraintStart_toStartOf="parent"			app:layout_constraintTop_toBottomOf="@id/premium" />		<LinearLayout            android:layout_width="fill_parent"			android:layout_height="match_parent"			android:gravity="start"			android:orientation="vertical"			android:paddingStart="@dimen/_15sdp"			android:paddingEnd="@dimen/_15sdp"			app:layout_constraintEnd_toEndOf="parent"			app:layout_constraintStart_toStartOf="parent"			app:layout_constraintTop_toBottomOf="@+id/restore">						<TextView                android:layout_width="wrap_content"				android:layout_height="wrap_content"				android:layout_gravity="center_horizontal"				android:text="Subscription Terms"				android:layout_marginTop="@dimen/_5sdp"				android:fontFamily="@font/avalon"				android:layout_marginBottom="@dimen/_5sdp"				android:textColor="@color/text_color"				android:textSize="@dimen/_10sdp"				android:textStyle="bold" />						<TextView                android:layout_width="match_parent"				android:layout_height="wrap_content"				android:layout_marginTop="@dimen/_5sdp"				android:text="1. Subscription will be charged to your credit card through your Google account at confirmed of purchase."				android:textColor="@color/text_color"				android:fontFamily="@font/avalon"				android:textSize="12sp" />						<TextView                android:layout_width="match_parent"				android:layout_height="wrap_content"				android:layout_marginTop="3dp"				android:text="2. Your subscription will automatically renew unless you canceled at least 24 hours before the end of the current valid period "				android:textColor="@color/text_color"				android:fontFamily="@font/avalon"				android:textSize="12sp" />						<TextView                android:layout_width="match_parent"				android:layout_height="wrap_content"				android:layout_marginTop="3dp"				android:fontFamily="@font/avalon"				android:text="3. To end a subscription, disable auto-renewal and allow the current period to end. It will not be possible to immediately cancel a subscription. "				android:textColor="@color/text_color"				android:textSize="12sp" />						<TextView                android:layout_width="match_parent"				android:layout_height="wrap_content"				android:layout_marginTop="3dp"				android:text="4. Refunds are not avaiable for unused portions of a subscription. "				android:textColor="@color/text_color"				android:textSize="14sp" />			<TextView				android:id="@+id/terms_page"				android:layout_width="match_parent"				android:layout_height="wrap_content"				android:layout_marginTop="3dp"				android:gravity="center"				android:text="Terms &amp; Conditions "				android:textColor="@color/colorgreen"				android:textSize="14sp" />		</LinearLayout>		</androidx.constraintlayout.widget.ConstraintLayout></ScrollView>